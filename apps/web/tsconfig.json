{
  "extends": "tsconfig/astro",
	"compilerOptions": {
		"jsx": "react-jsx", 
    "types": [
			"unplugin-icons/types/react",
			"unplugin-icons/types/astro"
		],
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@lib/*": ["./src/lib/*"],
			"@pages/*" : ["./src/pages/*"],
			"@stores/*": ["./src/stores/*"],
			"@styles/*": ["./src/styles/*"]
		}
	},
	"include": ["src"]
}
